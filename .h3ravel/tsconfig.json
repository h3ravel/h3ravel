{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "src": ["./../src"],
      "src/*": ["./../src/*"],
      "app": ["./../src"],
      "app/*": ["./../src/*"],
      "root": ["./.."],
      "root/*": ["./../*"],
      "config": ["./../src/config"],
      "config/*": ["./../src/config/*"],
      "http": ["./../src/http"],
      "http/*": ["./../src/http/*"],
      "resources": ["./../src/resources"],
      "resources/*": ["./../src/resources/*"],
      "routes": ["./../src/routes"],
      "routes/*": ["./../src/routes/*"]
    },
    "target": "esnext",
    "module": "preserve",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["./**/*.d.ts", "./../**/*"],
  "exclude": ["./dist", "/.node_modules"]
}
