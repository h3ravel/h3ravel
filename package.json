{
  "name": "h3ravel",
  "version": "0.3.0",
  "description": "Modern TypeScript runtime-agnostic web framework built on top of H3.",
  "type": "module",
  "main": "dist/index.js",
  "private": true,
  "categories": [
    "Programming Languages",
    "Extension Packs"
  ],
  "keywords": [
    "h3ravel",
    "framework",
    "nodejs",
    "typescript",
    "laravel"
  ],
  "scripts": {
    "build": "NODE_ENV=production tsdown --config-loader unconfig -c tsdown.default.config.ts",
    "dev": "NODE_ENV=development pnpm tsdown --config-loader unconfig -c tsdown.default.config.ts",
    "start": "DIST_DIR=dist node -r source-map-support/register dist/server.js",
    "lint": "eslint . --ext .ts",
    "test": "NODE_NO_WARNINGS=1 NODE_ENV=testing vitest",
    "coverage": "NODE_NO_WARNINGS=1 NODE_ENV=testing vitest run --coverage",
    "cleanup": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "postinstall": "pnpm spawn"
  },
  "dependencies": {
    "@h3ravel/arquebus": "^0.6.6",
    "@h3ravel/cache": "^11.0.7",
    "@h3ravel/config": "^1.4.5",
    "@h3ravel/console": "^11.9.1",
    "@h3ravel/core": "^1.16.2",
    "@h3ravel/database": "^11.4.1",
    "@h3ravel/filesystem": "^0.4.3",
    "@h3ravel/hashing": "^0.1.3",
    "@h3ravel/http": "^11.3.3",
    "@h3ravel/mail": "^11.0.7",
    "@h3ravel/queue": "^11.0.5",
    "@h3ravel/router": "^1.11.2",
    "@h3ravel/shared": "^0.22.2",
    "@h3ravel/support": "^0.14.1",
    "@h3ravel/url": "^1.0.2",
    "@h3ravel/view": "^0.1.3",
    "@types/express": "^5.0.3",
    "express": "^5.1.0",
    "h3": "2.0.0-beta.4",
    "reflect-metadata": "^0.2.2",
    "source-map-support": "^0.5.21",
    "vitest": "^3.2.4"
  },
  "devDependencies": {
    "@eslint/js": "latest",
    "@rollup/plugin-run": "^3.1.0",
    "@swc/core": "^1.13.5",
    "@types/node": "^24.5.2",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.34.0",
    "jest": "^30.0.5",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsdown": "^0.15.4",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.15.0"
}