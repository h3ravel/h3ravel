{
  "name": "h3ravel",
  "version": "0.2.0",
  "description": "Modern TypeScript runtime-agnostic web framework built on top of H3.",
  "type": "module",
  "main": "dist/index.js",
  "private": true,
  "categories": [
    "Programming Languages",
    "Extension Packs"
  ],
  "keywords": [
    "h3ravel",
    "framework",
    "nodejs",
    "typescript",
    "laravel"
  ],
  "scripts": {
    "build": "rm -rf dist && NODE_ENV=production tsup",
    "dev": "rm -rf dist && NODE_ENV=development pnpm tsup-node",
    "start": "SRC_PATH=dist node -r tsconfig-paths/register dist/server.js",
    "lint": "eslint . --ext .ts",
    "test": "NODE_NO_WARNINGS=1 NODE_ENV=testing jest --passWithNoTests",
    "cleanup": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "coverage": "NODE_NO_WARNINGS=1 NODE_ENV=testing JEST_JUNIT_CLASSNAME=coverage jest --passWithNoTests --coverage --coverageDirectory=coverage"
  },
  "dependencies": {
    "@h3ravel/cache": "^10.0.0",
    "@h3ravel/config": "^1.3.6",
    "@h3ravel/console": "^10.0.0",
    "@h3ravel/core": "^1.6.0",
    "@h3ravel/database": "^10.0.0",
    "@h3ravel/http": "^10.0.0",
    "@h3ravel/mail": "^10.0.0",
    "@h3ravel/queue": "^10.0.0",
    "@h3ravel/router": "^1.8.2",
    "@h3ravel/shared": "^0.17.1",
    "@h3ravel/support": "^0.8.5",
    "h3": "2.0.0-beta.3",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@eslint/js": "latest",
    "@swc/core": "^1.13.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.33.0",
    "jest": "^30.0.5",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0"
  },
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748"
}