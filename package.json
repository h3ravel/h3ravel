{
  "name": "@h3ravel/h3ravel",
  "version": "0.2.0",
  "description": "Modern TypeScript runtime-agnostic web framework built on top of H3.",
  "categories": [
    "Programming Languages",
    "Extension Packs",
    "Testing"
  ],
  "private": true,
  "type": "module",
  "module": "NodeNext",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "node esbuild.config.mjs",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.cjs",
    "lint": "eslint . --ext .ts",
    "cleanup": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "test": "NODE_NO_WARNINGS=1 NODE_ENV=testing jest --passWithNoTests",
    "coverage": "NODE_NO_WARNINGS=1 NODE_ENV=testing JEST_JUNIT_CLASSNAME=coverage jest --passWithNoTests --coverage --coverageDirectory=coverage",
    "release": "pnpm build && pnpm changeset version && pnpm changeset publish",
    "publish": "pnpm build && pnpm -r publish --access public"
  },
  "dependencies": {
    "@h3ravel/config": "^1.0.0",
    "@h3ravel/core": "^1.0.0",
    "@h3ravel/http": "^4.0.0",
    "@h3ravel/router": "^1.0.0",
    "@h3ravel/shared": "^0.6.0",
    "@h3ravel/support": "^0.6.0",
    "@h3ravel/database": "^4.0.0",
    "@h3ravel/cache": "^4.0.0",
    "@h3ravel/console": "^4.0.0",
    "@h3ravel/queue": "^4.0.0",
    "@h3ravel/mail": "^4.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@eslint/js": "^9.32.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "esbuild": "^0.25.8",
    "esbuild-plugin-alias": "^0.2.1",
    "eslint": "^9.32.0",
    "jest": "^30.0.5",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.0.0",
    "typescript": ">=5.4.0 <5.9.0",
    "typescript-eslint": "^8.38.0"
  },
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748"
}