{
  "name": "h3ravel",
  "version": "0.2.0",
  "description": "Modern TypeScript runtime-agnostic web framework built on top of H3.",
  "categories": [
    "Programming Languages",
    "Extension Packs"
  ],
  "keywords": [
    "h3ravel",
    "framework",
    "nodejs",
    "typescript",
    "laravel"
  ],
  "private": true,
  "type": "module",
  "module": "NodeNext",
  "moduleResolution": "Node",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "rm -rf dist && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json && tsc-esm-fix dist",
    "start": "NODE_OPTIONS='-r tsconfig-paths/register' node dist/src/server.js",
    "lint": "eslint . --ext .ts",
    "cleanup": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "test": "NODE_NO_WARNINGS=1 NODE_ENV=testing jest --passWithNoTests",
    "coverage": "NODE_NO_WARNINGS=1 NODE_ENV=testing JEST_JUNIT_CLASSNAME=coverage jest --passWithNoTests --coverage --coverageDirectory=coverage",
    "release": "pnpm build && pnpm changeset version && pnpm changeset publish",
    "publish": "pnpm build && pnpm -r publish --access public"
  },
  "dependencies": {
    "@h3ravel/cache": "^5.0.4",
    "@h3ravel/config": "^1.1.5",
    "@h3ravel/console": "^5.0.4",
    "@h3ravel/core": "^1.2.0",
    "@h3ravel/database": "^5.0.4",
    "@h3ravel/http": "^5.0.5",
    "@h3ravel/mail": "^5.0.4",
    "@h3ravel/queue": "^5.0.4",
    "@h3ravel/router": "^1.5.2",
    "@h3ravel/shared": "^0.14.0",
    "@h3ravel/support": "^0.7.3",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@eslint/js": "latest",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "jest": "^30.0.5",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsc-esm-fix": "^3.1.2",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0"
  },
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748"
}